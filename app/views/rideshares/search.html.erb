<% if @rideshares.empty? %>
	<div class="container">
		<h1>No rideshares available</h1>
	</div>
<% else %>
<h2 id="notice">Rides</h2>
<div class="blue-line"></div>
<div class ="body">
  <div class="row-large">
    <div class="col-3">
      <div class="col-search">Search div
        <%= form_tag search_rideshares_path, method: :get do %>
      <div class="search-bar container">
        <div class="column justify-content-between">
          <div class="field">
            <%= text_field_tag 'search[from]', nil, placeholder: 'From' %>
          </div>
          <div class="field">
            <%= text_field_tag 'search[to]', nil, placeholder: 'To' %>
          </div>
            <!--      <div class="col-2">-->
            <%#= text_field_tag 'search[date]', nil, placeholder: 'DATE' %>
            <!--      </div>-->
            <!--      <div class="col-2">-->
            <%#= text_field_tag 'search[time]', nil, placeholder: 'TIME' %>
            <!--      </div>-->
      <div class="col-2">
        <button>Search</button>
      </div>
    </div>
  </div>
<% end %>
      </div>
    </div>
    <div class="col">
      <% @rideshares.each do |ride| %>
        <div class ="container">
          <div class="row">
            <div class="container-custom">
              <div class="col-costum2">
                  Days: <%= ride.days %>
                <div class="container-custom"> 
                  <div class="col-custom3">
                    <div class="col-custom">
                      <div id="avatar"><%= image_tag user_avatar(ride.user, 69) %> </div>
                    </div>
                    <div class="col-custom">
                      <div id="rider-name">
                        <strong><%= ride.user.first_name.capitalize + ' ' + 
                        ride.user.last_name.slice(0).upcase + '.'%></strong>
                      </div>
                    </div>
                  </div>
                  <div id="updated_at"><%= ride.updated_at&.strftime("%B %e, %Y") %></div>
                  <div class="container-grey">
                    <div class="row-custom">
                      <div id="ride-time"><%= ride.dep_at&.strftime('%I:%M %p') %></div>
                      <div id="ride-time"><%= ride.arr_at&.strftime('%I:%M %p') %></div>
                    </div>
                    <div class="col-custom2">
                      <%= image_tag(asset_pack_path('media/images/dashed-line.svg')) %>
                      <div class="row-custom">
                        <div class="ride-name" id="ride-name1"><%= ride.from.name %></div>
                        <div class="ride-name" id="ride-name2"><%= ride.to.name %></div>
                      </div>
                    </div> 
                  </div>
                  <div class="button-join">
                    <%= button_to 'Join the ride', rideshare_path(ride), :method => :get, class: 'submit-button' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- >  Days: <%= ride.days %>
          Starts At: <%= ride.start_date&.strftime('%B %d, %Y') %>
          Ends At: <%= ride.end_date&.strftime('%B %d, %Y') %>
          Departure: <%= ride.dep_at&.strftime("%B %e, %Y at %I:%M %p")%>
          Arrival: <%= ride.arr_at&.strftime("%B %e, %Y at %I:%M %p") %>
          Seats: <%= ride.seat - ride.passengers.count %> -->
          <div id="col">
          <%= link_to 'Edit', edit_rideshare_path(ride) %>
          <%= link_to 'Delete', ride, method: :delete, data: { confirm: 'Are you sure?' } %> 
          </div>
      <% end %>
    </div> 
      <div id="map2">
        <iframe width='100%' height='100%' src='https://maps.google.com/maps?q=Jersey,%20United%20Kingdom&Roadmap&z=12&output=embed' 
        frameborder='0' marginheight='0' marginwidth='0'></iframe>
      </div>
  </div> 
</div>
<% end %>