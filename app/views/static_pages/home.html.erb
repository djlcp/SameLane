<div class="container">
	<div class="carousel-container">
		<div id="carouselExampleIndicators" class="carousel slide vertical-center" data-ride="carousel">
			<div class="carousel-inner">
				<% @rideshares.each_with_index do |r, i| %>
					<div class="carousel-item <%= i == 0 ? "active" : "" %>">
						<div class="container w-75">
							<div class="row">
								<div class="col-2 user-picture">
									<img class="img-fluid" src="http://i.imgur.com/EW5FgJM.png" alt="Carousel 1">
								</div>
								<div class="col-3 user-name align-self-center">
									<%= r.user.first_name %>
								</div>
								<div class="col-4 offset-3 rs-c-d align-self-center ">
									<p>**Day of Ride**</p>
								</div>
							</div>
							<div class="row card-info text-center justify-content-between">
								<div class="col">
									<%= r.dep_at.strftime("%-l:%M%P") %>
									<%= r.from.name %>
									<%= r.from.parish %>
								</div>
								<div class="col">
									<p>Travel-time</p>
									<p>Distance</p>
								</div>
								<div class="col">
									<%= r.arr_at.strftime("%-l:%M%P") %>
									<%= r.to.name %>
									<%= r.to.parish %>
								</div>
							</div>
							<div class="row bg-gray">
								<div class="col-3 offset-9 join-ride-btn align-items-end">
									<button>Join Ride</button>
								</div>
							</div>
						</div>
					</div>
				<%
					end
				%>
			</div>
		</div>
		<ol class="carousel-indicators">
			<% @rideshares.each_with_index do |r, i| %>
				<li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= i == 0 ? "active" : "" %>"></li>
			<% end %>
		</ol>
	</div>
</div>